    <script>
        function selectPes() {
            var rowId =
                event.target.parentNode.id;
            var data =
                document.getElementById(rowId).querySelectorAll(".row-data");
            var pname = data[0].innerHTML;
            var prasa = data[1].innerHTML;
            var pvek = data[2].innerHTML;

            document.getElementById('pname').value = pname;
            document.getElementById('prasa').value = prasa;
            document.getElementById('pvek').value = pvek;

        };

        function tclick() {
            var rowId =
                event.target.parentNode.id;
            //this gives id of tr whose button was clicked
            console.log('HAHAHAH ' + rowId);
            var data =
                document.getElementById(rowId).querySelectorAll(".row-data");
            var name = data[0].innerHTML;
            var email = data[1].innerHTML;
            var adress = data[2].innerHTML;
            var tel = data[3].innerHTML;
            var role = data[4].innerHTML;
            console.log(name + " " + email + " " + role);
            document.getElementById('name').value = name;
            document.getElementById('email').value = email;
            document.getElementById('adress').value = adress;
            document.getElementById('tel').value = tel;
            document.getElementById('role').value = role;
        };
