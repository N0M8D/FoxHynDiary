    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoxHyn Deník</title>
</head>

<body>
    <nav>
        <h4>FoxHyn Deník</h4>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <%if(typeof logedIn == "undefined" || logedIn == false){%>
                <li>
                    <a href="/auth/login">Login</a>
                </li>
                <% } else { %>
                    <li>
                        <a href="/auth/logout">Logout</a>
                    </li>
                    <li>
                        <a href="/statistiky">Plány</a>
                    </li>
                    <li>
                        <a href="/create-predavak">Profil</a>
                    </li>
                    <li>
                        <a href="/create-predavak">Deník</a>
                    </li>
                    <li>
                        <a href="/create-predavak">Postupy</a>
                    </li>
                    <li>
                        <a href="/create-predavak">Úspěchy</a>
                    </li>
                    <li>
                        <a href="/create-predavak">Statistiky</a>
                    </li>
                    <%} %>

        </ul>
    </nav>

    <div class="UniPage-div">
        <form action="">

            <div class="input-group">
                <span class="input-group-text">Datum</span>
                <input type="text " aria-label="First name" class="form-control">
                <label class="input-group-text" for="inputGroupSelect01">Druh aktivity:</label>
                <select class="form-select" id="inputGroupSelect01">
                  <option selected>Vyberte...</option>
                  <option value="1">Cvičení doma</option>
                  <option value="2">Cvičení venku</option>
                  <option value="3">Agility</option>
                  <option value="3">Výstava</option>
                  </select>
            </div>

            <div class="input-group">
                <label class="input-group-text" for="inputGroupSelect01">Pes:</label>
                <select class="form-select" id="inputGroupSelect01">
                    <option selected>Vyberte...</option>
                    <option value="1">Ariša</option>
                    <option value="2">Meggie</option>
                 </select>
            </div>

            <div class="input-group ">
                <label class="input-group-text" for="inputGroupSelect01">Plán:</label>
                <select class="form-select" id="inputGroupSelect01">
                  <option selected>Vyberte...</option>
                  <option value="1">Sedni a zůstaň</option>
                  <option value="2">Poslušnost venku</option>
                  <option value="3">Slalom</option>
                  <option value="3">Vyhrát CAC na výstavě</option>
                  </select>

                <input type="radio" class="btn-check" name="options-outlined" id="success-outlined" autocomplete="off">
                <label class="btn btn-outline-success" for="success-outlined">Splněno</label>

                <input type="radio" class="btn-check" name="options-outlined" id="primary-outlined" autocomplete="off">
                <label class="btn btn-outline-primary" for="primary-outlined">Postup</label>

                <input type="radio" class="btn-check" name="options-outlined" id="danger-outlined" autocomplete="off">
                <label class="btn btn-outline-danger" for="danger-outlined">Nesplněno</label>
            </div>

            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Delší text, poznámka ..</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Uložit záznam</button>
            </div>
        </form>
    </div>






    <!-- Footer -->
    <footer class="text-center text-white fixed-bottom " style="background-color: #21081a; ">
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3 " style="background-color: rgba(0, 0, 0, 0.2); ">
