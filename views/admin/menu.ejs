<!DOCTYPE html>
<html lang="en">

<head>
    <script type="text/javascript" src="/public/js/scripts.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/sticky-footer-navbar/">
    <link href="/docs/5.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoxHyn Deník</title>
</head>

<body>
    <nav>
        <h4>FoxHyn Deník</h4>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <%if(typeof logedIn == "undefined" || logedIn == false){%>
                <li>
                    <a href="/auth/login">Login</a>
                </li>
                <% } else { %>
                    <li>
                        <a href="/auth/logout">Logout</a>
                    </li>
                    <li>
                        <a href="/pessos/denik/denni">Denní záznam</a>
                    </li>
                    <li>
                        <a href="/pessos/denik/tydenni">Týdení záznam</a>
                    </li>
                    <li>
                        <a href="/pessos/denik/zaznamy">Záznamy</a>
                    </li>
                    <%} %>

        </ul>
    </nav>

    <!-- Main part -->
    <main class="flex-shrink-0">
        <div class="container">
            <h1 class="mt-5">Administátorské menu</h1>
            <p class="lead">HAHA.</p>
        </div>

        <div style="text-align: center; padding-left: 25%;padding-right: 25%;">
            <%if(typeof error == "undefined"){%>
                <% } else if (error == 'Heslo změněno!'){ %>
                    <h4 class="alert alert-success mt-4">
                        <%= error%>
                    </h4>
                    <%} else {%>
                        <h4 class="alert alert-danger mt-4">
                            <%= error%>
                        </h4>
                        <%}%>
        </div>

        <div class="flex-shrink-0 mt-5 container">
            <h4>Uživatelé:</h4>
            <table class="table table-sm table-bordered table-hover" onclick="tclick()">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Jméno</th>
                        <th scope="col">Email</th>
                        <th scope="col">Adresa</th>
                        <th scope="col">Telefon</th>
                        <th scope="col">Role</th>
                        <th scope="col">Registrován</th>
                        <th scope="col">Akce</th>
                    </tr>
                </thead>
                <tbody>
                    <%
                        if(uzivatele.length != 0 && typeof uzivatele != "undefined"){
                            var i = 1;
                        uzivatele.forEach(function(data){ if (data != "") {
                        %>
                        <tr id="<%=data.id %>">
                            <th scope="row">
                                <%=i %>
                            </th>
                            <td class="row-data">
                                <%=data.name %>
                            </td>
                            <td class="row-data">
                                <%=data.email %>
                            </td>
                            <td class="row-data">
                                <%=data.adress %>
                            </td>
                            <td class="row-data">
                                <%=data.telefon %>
                            </td>
                            <td class="row-data">
                                <%=data.permissions %>
                            </td>
                            <td class="row-data">
                                <%=data.registered %>
                            </td>
                            <td>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal_<%=data.id %>">
                                    Změnit heslo
                                </button>

                            </td>
                        </tr>

                        <!-- The Modal -->
                        <div class="modal" id="myModal_<%=data.id %>">
                            <div class="modal-dialog">
                                <div class="modal-content">

                                    <!-- Modal Header -->
                                    <div class="modal-header">
                                        <h4 class="modal-title">Změna hesla</h4>
                                        <button type="button" class="btn close" data-dismiss="modal">&times;</button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        <p>
                                            Změna hesla pro uživatele:
                                            <%=data.name %>
                                        </p>
                                        <p>
                                            Email uživatele:
                                            <%=data.email %>
                                        </p>
                                        <form method="post" action="/auth/changePassword">
                                            <input type="text" class="form-control" required id="pid" name="pid" value="<%=data.id %>" hidden>
                                            <div class="row">
                                                <div class="col">
                                                    <input type="password" class="form-control" placeholder="Heslo poprvé" required id="password" name="password">
                                                </div>
                                                <div class="col">
                                                    <input type="password" class="form-control" placeholder="Heslo pro kontrolu" required id="passwordConfirm" name="passwordConfirm">
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <button type="submit " id="submit" class="btn btn-success" onclick="hideit()">Změnit heslo</button>
                                                <script>
                                                    function hideit() {
                                                        $('#myModal_<%=data.id %>').modal('hide')
                                                    }
                                                </script>
                                            </div>
                                        </form>
                                    </div>
                                    <!-- Modal footer -->
                                    <div class="modal-footer">

                                        <button type="button" class="btn btn-danger" onclick="hideit()">Zavřít</button>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <!-- The Modal -->

                        <% i++;}})} else {  %>
                            <td colspan="7" class="row-data">
                                "NO DATA"
                            </td>
                            <% } %>
                </tbody>
            </table>

            <form action="/admin/saveOrCreate" method="post">
                <div class="input-group mb-3">
                    <span class="input-group-text">Email @</span>
                    <input type="text " value="" name="email" id="email" class="form-control" placeholder="Email">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text">Jméno a příjmení</span>
                    <input type="text " value="" id="name" name="name" class="form-control" placeholder="jméno a příjmení">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon3">Adresa</span>
                    <input type="text " name="adress" class="form-control" id="adress">
                    <span class="input-group-text">Telefon:</span>
                    <input type="text " id="tel" name="tel" class="form-control">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text">Role</span>
                    <input type="text " id="permissions" name="permissions" class="form-control">
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-primary mb-5" type="submit">Zalžit/Uožit uživatele</button>
                </div>
            </form>

            <div class="row">
                <div class="col-md-6">
                    <h4>Smečka uživatele:</h4>
                    <table class="table table-sm table-bordered table-hover" onclick="selectPes()">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Jméno</th>
                                <th scope="col">Rasa</th>
                                <th scope="col">Věk</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="pes-1">
                                <th scope="row">1</th>
                                <td class="row-data">Pes</td>
                                <td class="row-data">Dalmatýn</td>
                                <td class="row-data">5</td>
                            </tr>
                            <tr id="pes-2">
                                <th scope="row">2</th>
                                <td class="row-data">Kočka</td>
                                <td class="row-data">Vlčák</td>
                                <td class="row-data">2</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <div class="col-md-6">
                    <h4>Data o psovi:</h4>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Jméno</span>
                        <input id="pname" type="text " class="form-control" placeholder="Jméno psa">
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text">Rasa</span>
                        <input id="prasa" type="text " class="form-control" placeholder="Rasa psa">
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text">Věk</span>
                        <input id="pvek" type="text " class="form-control" placeholder="Věk psa">
                        <span class="input-group-text">let</span>
                    </div>
                </div>
            </div>


    </main>
    <!-- Main part -->


    <!-- Footer -->
    <footer class="text-center text-white fixed-bottom" style="background-color: #21081a;">
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2021 Copyright:
            <a class="text-white" href="https://josefbouse.cz/" style="text-decoration: none;">Josef Bouše</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->

    <script>
        function selectPes() {
            var rowId =
                event.target.parentNode.id;
            var data =
                document.getElementById(rowId).querySelectorAll(".row-data");
            var pname = data[0].innerHTML;
            var prasa = data[1].innerHTML;
            var pvek = data[2].innerHTML;

            document.getElementById('pname').value = pname.trim();
            document.getElementById('prasa').value = prasa.trim();
            document.getElementById('pvek').value = pvek.trim();

        };

        function tclick() {
            var rowId =
                event.target.parentNode.id;
            //this gives id of tr whose button was clicked
            console.log('HAHAHAH ' + rowId);
            var data =
                document.getElementById(rowId).querySelectorAll(".row-data");
            var name = data[0].innerHTML;
            var email = data[1].innerHTML;
            var adress = data[2].innerHTML;
            var tel = data[3].innerHTML;
            var role = data[4].innerHTML;
            document.getElementById('name').value = name.trim();
            document.getElementById('email').value = email.trim();
            document.getElementById('adress').value = adress.trim();
            document.getElementById('tel').value = tel.trim();
            document.getElementById('role').value = role.trim();
        };
    </script>
    <script src="/docs/5.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>

</html>