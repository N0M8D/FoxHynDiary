    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoxHyn Deník</title>
</head>

<body>
    <nav>
        <h4>FoxHyn Deník</h4>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <%if(typeof logedIn == "undefined" || logedIn == false){%>
                <li>
                    <a href="/auth/login">Login</a>
                </li>
                <% } else { %>
                    <li>
                        <a href="/auth/logout">Logout</a>
                    </li>
                    <li>
                        <a href="/statistiky">Plány</a>
                    </li>
                    <li>
                        <a href="/create-predavak">Profil</a>
                    </li>
                    <li>
                        <a href="/create-predavak">Deník</a>
                    </li>
                    <li>
                        <a href="/create-predavak">Postupy</a>
                    </li>
                    <li>
                        <a href="/create-predavak">Úspěchy</a>
                    </li>
                    <li>
                        <a href="/create-predavak">Statistiky</a>
                    </li>
                    <%} %>

        </ul>
    </nav>

    <div class="UniPage-div">
        <h4>Založení nového uživatele:</h4>

        <form action="/auth/createuser" method="POST">
            <div class="input-group mb-1">
                <span class="input-group-text">Jméno a Příjmení</span>
                <input id="name" name="name" type="text " aria-label="First name" class="form-control" required>
            </div>
            <div class="input-group mb-1">
                <span class="input-group-text" id="addon-wrapping">@ Email</span>
                <input id="email" name="email" type="email " class="form-control" placeholder="email@email.com" required>
            </div>
            <div class="input-group mb-1">
                <span class="input-group-text" id="addon-wrapping">Telefon:</span>
                <input id="tel" name="tel" type="text " class="form-control" placeholder="123456789">
            </div>
            <div class="input-group mb-1">
                <span class="input-group-text" id="addon-wrapping">Adresa</span>
                <input id="adress" name="adress" type="text " class="form-control" placeholder="Pražská 7, Praha 1, 261 01">
            </div>
            <div class="input-group mb-1">
                <span class="input-group-text">Heslo a potvrzení hesla</span>
                <input id="password" name="password" type="password " class="form-control" required>
                <input id="passwordConfirm" name="passwordConfirm" type="password " class="form-control" required>
            </div>
            <button type="submit " class="btn btn-primary mb-1">Založit uživatele</button>
        </form>

        <%if(typeof message == "undefined"){%>
            <% } else if (message == "user registered"){ %>
                <h4 style="text-align: center;" class="alert alert-success mt-4">
                    <%= message%>
                </h4>
                <%} else {%>
                    <h4 style="text-align: center;" class="alert alert-danger mt-4">
                        <%= message%>
                    </h4>
                    <%}%>


    </div>


    <!-- Footer -->
    <footer class="text-center text-white fixed-bottom " style="background-color: #21081a; ">
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3 " style="background-color: rgba(0, 0, 0, 0.2); ">
            © 2021 Copyright:
            <a class="text-white " href="https://josefbouse.cz/ " style="text-decoration: none; ">Josef Bouše</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
