<!DOCTYPE html>
<html lang="cs">

<head>
    <script src="/js/scripts.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/sticky-footer-navbar/">
    <link href="/docs/5.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoxHyn Deník</title>
</head>

<body>
    <nav>
        <h4>FoxHyn Deník</h4>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <%if(!userData || typeof(userData) == "undefined"){%>
                <li>
                    <a href="/auth/login">Login</a>
                </li>
                <% } else { %>
                    <li>
                        <a href="/auth/logout">Logout</a>
                    </li>
                    <li>
                        <a href="/pessos/denik/denni">Denní záznam</a>
                    </li>
                    <li>
                        <a href="/pessos/denik/tydenni">Týdení záznam</a>
                    </li>
                    <li>
                        <a href="/pessos/denik/zaznamy">Záznamy</a>
                    </li>
                    <%if(userData.upermissions == "admin"){%>
                        <li>
                            <a href="/admin/cvicitel">Cvičitel</a>
                        </li>
                        <li>
                            <a href="/admin/menu">Administrace</a>
                        </li>
                        <% } %>
                            <%if(userData.upermissions == "cvicitel"){%>
                                <li>
                                    <a href="/admin/cvicitel">Cvičitel</a>
                                </li>
                                <% }} %>

        </ul>
    </nav>

    <div class="container">
        <%  if(message.length > 0) { %>
            <div class="alert alert-success" style="text-align: center;">
                <h4>
                    <%= message %>
                </h4>
            </div>
            <% } %>

                <%  if(error.length > 0) { %>
                    <div class="alert alert-danger" style="text-align: center;">
                        <h4>
                            <%= error %>
                        </h4>
                    </div>
                    <% } %>

                        <%  if(info.length > 0) { %>
                            <div class="alert alert--info" style="text-align: center;">
                                <h4>
                                    <%= info %>
                                </h4>
                            </div>
                            <% } %>
    </div>

    <!-- Main part -->
    <main class="flex-shrink-0 p-5">
        <h4>CVIČITEL MENU</h4>
        <div class="container">
            <table class='table table-bordered table-condensed table-striped table-hover'>
                <tbody>
                    <tr>
                        <th>Pes</th>
                        <th>Rasa</th>
                        <th>Majitel</th>
                        <th>Cvičitel</th>
                        <th>Akce</th>
                    </tr>
                    <%
                            if(dogs.length != 0 && typeof dogs != "undefined"){
                                var i = 1;
                            dogs.forEach(function(data){ if (data != "") {
                            %>
                        <tr id="<%=data.id %>" class="clickable-row" data-href="/pessos/profile?id=<%=data.uid %>">
                            <td class="row-data">
                                <%=data.name %>
                            </td>
                            <td class="row-data">
                                <%=data.race %>
                            </td>
                            <td class="row-data">
                                <%=data.uname %>
                            </td>
                            <td class="row-data">
                                <% if (data.cname != null) { %>
                                    <%=data.cname %>
                                        <%} else { %>
                                            Nepřiřazen
                                            <% } %>
                            </td>
                            <td>
                                <% if(data.cname != null && data.cname != "" && data.cname != "Nepřiřazen")
                                { %>
                                    <form action="/admin/cvicitel/unassign" method="post">
                                        <input type="text" hidden id="did" name="did" value="<%=data.id %>">
                                        <button type="submit" class="btn btn-danger">
                                        Odebrat cvičitele
                                    </button>
                                    </form>
                                    <%} else if(userData.upermissions == "admin") { %>
                                        <button type="submit " class="btn btn-success" data-toggle="modal" data-target="#myModal_<%=data.id %>">
                                        Přidat cvičitele
                                    </button>
                                        <!-- The Modal -->
                                        <div class="modal" id="myModal_<%=data.id %>">
                                            <div class="modal-dialog">
                                                <div class="modal-content">

                                                    <!-- Modal Header -->
                                                    <div class="modal-header">
                                                        <h4 class="modal-title">Výběr cvičitele</h4>
                                                        <button type="button" class="btn close" data-dismiss="modal">&times;</button>
                                                    </div>

                                                    <!-- Modal body -->
                                                    <div class="modal-body">

                                                        <table class='table table-bordered'>
                                                            <tbody>
                                                                <tr>
                                                                    <th>Cvičitel</th>
                                                                </tr>
                                                                <%
                                                                    if(cvicitele.length != 0 && typeof cvicitele != "undefined"){
                                                                        cvicitele.forEach(function(mdata){
                                                                    %>
                                                                    <tr id="<%=data.id %>">
                                                                        <td>
                                                                            <form action="/admin/cvicitel/assign" method="post">
                                                                                <input type="text" hidden id="did" name="did" value="<%=data.id %>">
                                                                                <input type="text" hidden id="cid" name="cid" value="<%=mdata.id %>">
                                                                                <button class="btn btn-secondary" style="width: 100%"><%=mdata.name %></button>
                                                                            </form>
                                                                        </td>
                                                                    </tr>
                                                                    <%})} %>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <!-- Modal footer -->
                                                    <div class="modal-footer">

                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Zavřít</button>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>

                                        <!-- The Modal -->
                                        <% } else if (userData.upermissions == "cvicitel") { %>
                                            <form action="/admin/cvicitel/assign" method="post">
                                                <input type="text" hidden id="did" name="did" value="<%=data.id %>">
                                                <input type="text" hidden id="cid" name="cid" value="<%=userData.uid %>">
                                                <button type="submit" class="btn btn-success">
                                        Převzít
                                    </button>
                                            </form>
                                            <% } %>
                            </td>

                            <% i++;}})} else {  %>
                                <td colspan="7" class="row-data">
                                    "NO DATA"
                                </td>
                                <% } %>
                        </tr>
                </tbody>
            </table>
        </div>

        <script type="text/javascript">
            $(document).ready(function($) {
                $(".clickable-row").click(function() {
                    window.document.location = $(this).data('href');
                });
            });
        </script>

    </main>
    <!-- Main part -->


    <!-- Footer -->
    <footer class="text-center text-white fixed-bottom" style="background-color: #21081a;">
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2021 Copyright:
            <a class="text-white" href="https://josefbouse.cz/" style="text-decoration: none;">Josef Bouše</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->


    <script src="/docs/5.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>

</html>