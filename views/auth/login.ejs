<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoxHyn Deník</title>

</head>

<body>
    <nav>
        <h4>FoxHyn Deník</h4>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <%if(typeof logedIn == "undefined" || logedIn == false){%>
                <li>
                    <a href="/auth/login">Login</a>
                </li>
                <% } else { %>
                    <li>
                        <a href="/auth/logout">Logout</a>
                    </li>
                    <li>
                        <a href="/statistiky">Statistiky</a>
                    </li>
                    <li>
                        <a href="/create-predavak">Založit nový</a>
                    </li>
                    <%} %>

        </ul>
    </nav>

    <div class="MainDiv">
        <form action="/auth/login" method="post">
            <div>
                <div class="input-group">
                    <div class="input-group-prepend ">
                        <span class="input-group-text ">Email a heslo</span>
                    </div>
                    <input id="email" name="email" type="email " class="form-control " placeholder="Email" required>
                    <input id="password" name="password" type="password" class="form-control " placeholder="Heslo" required>
                    <div class="input-group-append ">
                        <button class="btn btn-success" type="button " id="button-addon2 ">Přihlásit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div style="text-align: center; padding-left: 25%;padding-right: 25%;">
        <%if(typeof error == "undefined"){%>
            <% } else if (error == "user registered"){ %>
                <h4 class="alert alert-success mt-4">
                    <%= error%>
                </h4>
                <%} else {%>
                    <h4 class="alert alert-danger mt-4">
                        <%= error%>
                    </h4>
                    <%}%>
    </div>

    <!-- Footer -->
    <footer class="text-center text-white fixed-bottom" style="background-color: #21081a;">
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2021 Copyright:
            <a class="text-white" href="https://josefbouse.cz/" style="text-decoration: none;">Josef Bouše</a> &
            <a class="text-white" href="https://foxhyn.com/" style="text-decoration: none;">Pavla Krausová</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
</body>

</html>